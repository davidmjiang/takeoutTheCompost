<html>

<%- include('../includes/head') %>

<body style="padding-top: 80px">
  <%- include('../includes/nav') %>
  <div>
    <pre><%- JSON.stringify(viewResult) %></pre>
    <div class="container">
      <div class="jumbotron">
        <form class="form-horizontal" role="form" style="width: 50%;" action="/review" method="post">
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="name" name="name" placeholder="First & Last Name" value='<%= viewResult.name.toString() %>' readonly>
            </div>
          </div>
          <%- include('../includes/radioButtonGroup', {label: "Containers:", name: "containers", data: viewResult.containers, helpers: helpers }) %>
          <%- include('../includes/radioButtonGroup', {label: "Cups:", name: "cups", data: viewResult.cups, helpers: helpers }) %>
          <%- include('../includes/radioButtonGroup', {label: "Bags:", name: "bags", data: viewResult.bags, helpers: helpers }) %>
          <%- include('../includes/radioButtonGroup', {label: "Utensils:", name: "utensils", data: viewResult.utensils, helpers: helpers }) %>
          <input id="submit" type="submit" value="Submit" class="btn btn-primary">
          <input type="hidden" name="yelpId" value='<%- viewResult.yelpId %>' />
          <input type="hidden" name="latitude" value='<%- viewResult.lat %>' />
          <input type="hidden" name="longitude" value='<%- viewResult.lon %>' />
          <input type="hidden" name="id" value='<%- viewResult.id %>' />
        </form>
      </div>
    </div>
  </div>
  <%- include('../includes/scripts') %>
</body>

</html>